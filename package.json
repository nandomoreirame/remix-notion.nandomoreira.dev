{
  "name": "@nandomoreirame/remix-notion",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf app/ui/styles/css",
    "build": "yarn clean && run-p build:*",
    "build:sass": "sass --embed-source-map app/ui/styles/sass/:app/ui/styles/css --style compressed",
    "build:remix": "remix build",
    "deploy": "vercel deploy --prod",
    "dev": "yarn clean && run-p dev:*",
    "dev:sass": "sass --watch --embed-source-map app/ui/styles/sass/:app/ui/styles/css",
    "dev:remix": "remix dev",
    "test": "run-p test:*",
    "test:lint": "eslint '**/*.{ts,tsx}' --max-warnings=0",
    "test:prettier": "prettier '**/*.{json,js,jsx,ts,tsx}' --check",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@notionhq/client": "^1.0.4",
    "@remix-run/node": "^1.4.0",
    "@remix-run/react": "^1.4.0",
    "@remix-run/vercel": "^1.4.0",
    "@vercel/node": "^1.14.0",
    "marked": "^4.0.14",
    "notion-to-md": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "react-markdown": "^8.0.2",
    "remix-utils": "^3.0.0",
    "slugify": "^1.6.5"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.4.0",
    "@remix-run/eslint-config": "^1.4.0",
    "@remix-run/serve": "^1.4.0",
    "@types/marked": "^4.0.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.4",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "sass": "^1.50.0",
    "typescript": "^4.5.5"
  }
}
