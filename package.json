{
  "name": "@nandomoreirame/remix-notion",
  "private": true,
  "description": "",
  "license": "",
  "sideEffects": false,
  "scripts": {
    "clean": "rm -rf app/ui/styles/css app/ui/styles/_tmp",
    "build": "yarn clean && yarn build:css && yarn build:remix",
    "build:css": "yarn build:sass && postcss app/ui/styles/_tmp --base app/ui/styles/_tmp --dir app/ui/styles/css --env production",
    "build:sass": "sass --no-source-map app/ui/styles/sass:app/ui/styles/_tmp --style compressed",
    "build:remix": "remix build",
    "deploy": "vercel deploy --prod",
    "dev": "yarn clean && run-p dev:*",
    "dev:sass": "sass --watch --embed-source-map app/ui/styles/sass:app/ui/styles/css",
    "dev:remix": "remix dev",
    "test": "run-p test:*",
    "test:lint": "eslint '**/*.{ts,tsx}' --max-warnings=0",
    "test:prettier": "prettier '**/*.{json,js,jsx,ts,tsx}' --check",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@next-boost/hybrid-disk-cache": "^0.3.0",
    "@notionhq/client": "^1.0.4",
    "@remix-run/node": "^1.4.1",
    "@remix-run/react": "^1.4.1",
    "@remix-run/vercel": "^1.4.1",
    "@vercel/node": "^1.14.0",
    "marked": "^4.0.14",
    "notion-to-md": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hidden-easter-egg": "^1.0.5",
    "react-icons": "^4.3.1",
    "react-markdown": "^8.0.3",
    "react-raining-confetti": "^1.0.1",
    "remix-image": "^0.3.18",
    "remix-utils": "^3.0.0",
    "sharp": "^0.30.4",
    "slugify": "^1.6.5"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.4.1",
    "@remix-run/eslint-config": "^1.4.1",
    "@remix-run/serve": "^1.4.1",
    "@types/marked": "^4.0.3",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.5",
    "cssnano": "^5.1.7",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "prettier": "^2.6.2",
    "sass": "^1.50.1",
    "typescript": "^4.5.5"
  }
}
